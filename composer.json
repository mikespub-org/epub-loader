{
    "name": "mikespub/epub-loader",
    "description": "epub-loader is a utility resource for ebooks",
    "authors": [
        {
            "name": "marsender",
            "homepage": "https://github.com/marsender",
            "role": "Developer"
        },
        {
            "name": "mikespub",
            "homepage": "https://github.com/mikespub-org/epub-loader",
            "role": "Developer"
        }
    ],
    "type": "project",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8.2",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-xml": "*",
        "ext-zip": "*",
        "ext-zlib": "*",
        "mikespub/survos-wikidata": "^5.2",
        "mikespub/php-epub-meta": "^3.5",
        "twig/twig": "^3.21"
    },
    "autoload": {
        "classmap": ["src/", "app/"]
    },
    "autoload-dev": {
        "classmap": ["tests/"]
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    },
    "suggest": {
        "mikespub/seblucas-cops": "COPS - Calibre OPDS (and HTML) PHP Server",
        "google/apiclient": "Client library for Google APIs",
        "league/flysystem": "File storage abstraction for PHP",
        "league/flysystem-read-only": "Read-only filesystem adapter for Flysystem",
        "masbug/flysystem-google-drive-ext": "Flysystem adapter for Google Drive with seamless virtualdisplay path translation"
    },
    "extra": {
        "google/apiclient-services": [
            "Drive"
        ]
    }
}
